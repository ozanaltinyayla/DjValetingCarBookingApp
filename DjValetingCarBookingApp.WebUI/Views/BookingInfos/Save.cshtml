
@{
    ViewData["Title"] = "Save";
}

<h1>Create Booking</h1>
@model BookingInfoWithCustomerDto
<div class="row">
    <div class="col-md-6">
        <form asp-action="Save" asp-controller="BookingInfos" method="post">
            <div class="form-group">
                <label asp-for="Customer.Name"></label>
                <input asp-for="Customer.Name" class="form-control" />
                <span asp-validation-for="Customer.Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.ContactNumber"></label>
                <input asp-for="Customer.ContactNumber" class="form-control" />
                <span asp-validation-for="Customer.ContactNumber"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Email"></label>
                <input asp-for="Customer.Email" class="form-control" />
                <span asp-validation-for="Customer.Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookingDate"></label>
                <input asp-for="BookingDate" class="form-control" />
                <span asp-validation-for="BookingDate"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flexibility"></label>
                <input asp-for="Flexibility" class="form-control" />
                <span asp-validation-for="Flexibility"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleSize"></label>
                <select asp-for="VehicleSize" asp-items="@Html.GetEnumSelectList<VehicleSize>()"></select>
                <span asp-validation-for="VehicleSize"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn-primary" />
            </div>
        </form>
    </div>
</div>

